<div class="navbar_newsfeed title_zonelist">
      <p>Create a zone</p>
</div>

<div class="container">
  <%= simple_form_for([@zone], html: {id: 'simple_form_creation_zone'}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :title,
                  required: true,
                  hint: false,
                  as: :string,
                  label: "Name your zone",
                  autofocus: true,
                  input_html: { data: { title: :title} },
                  placeholder: "Ex: Home"
                  %>
    <%= f.input :address,
                  as: :string,
                  hint: false,
                  required: true,
                  label: "Type your address",
                  autofocus: true,
                  input_html: { data: { address: :address} },
                  id: 'zone_address'
                  %>
    <%= f.input :radius,
                  as: :integer,
                  hint: false,
                  label: "Choose the radius",
                  required: true,
                  autofocus: true,
                  input_html: { data: { radius: :radius} },
                  placeholder: "Enter a radius less than 1000m"
                  %>




    <div id='creation_zone' style='height: 250px; width:100%;'>

    </div>


<div class="form-check">
  <div class="container-interest-all">
      <div class="row">
      <% @interest_tags.each do |interest| %>

        <div class="col-xs-4 col-md-3 col-lg-2">
          <div class="wrapper-card-interest">
            <input required id="interest_choice_<%= interest.id %>" aria-required="true" type="checkbox" value="<%= interest.id %>" name="zone[interest_tag_ids][]" >
              <label for="interest_choice_<%= interest.id %>">
                <%= image_tag interest.photo, class:"zone_photo" %>
              <div class="interest-title">
               <%= interest.title %>
              </div>
            </label>
          </div>

        </div>
           <% end %>
      </div>


  </div>
    </div>
    <br>
    <%= f.button :submit, "Create", class:"button_normal", id:"profile-edit" %>
    <br>
    <br>
    <br>
    <br>
  <% end %>

  </div>


    <div class="col-xs-12 col-lg-6 col-lg-offset-3">
      <%= render 'components/navbar_bottom' %>
    </div>


 <%= javascript_pack_tag 'zone_map' %>


    <div class="col-xs-12 col-lg-6 col-lg-offset-3">
      <%= render 'components/navbar_bottom' %>
    </div>
