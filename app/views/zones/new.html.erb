<h1>Create a zone</h1>
  <%= simple_form_for([@zone], html: {id: 'simple_form_creation_zone'}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :title,
                  required: true,
                  autofocus: true
                  %>

    <%= f.input :address,
                  required: true,
                  autofocus: true
                  %>
    <%= f.input :radius,
                  as: :integer,
                  required: true,
                  autofocus: true
                  %>
    <%= f.association :interest_tags,
                  as: :check_boxes,
                  required: true %>

    <%= f.button :submit, "create a zone" %>

 <% end %>

