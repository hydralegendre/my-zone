<h1>Edit a zone</h1>

<%= simple_form_for([@zone]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :address %>
    <%= f.input :radius %>
    <%= f.association :interest_tags,
                as: :check_boxes,
                selected: @zone.interest_tags %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "edit this zone" %>
  </div>
<% end %>


