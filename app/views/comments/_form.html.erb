
<div class=" container_comment">
  <div>
    <%= link_to user_path(current_user) do %>
      <% if current_user.avatar_url.blank? == true %>
        <%= image_tag("default-avatar.png", class:"avatar_navbar avatar_navbar_show") %>
      <% else %>
        <%=  cl_image_tag(cuurent_user.avatar_url, class:"avatar_navbar avatar_navbar_show") %>
      <% end %>
      <% end  %>
  </div>
  <div class="simple_form">
    <%= simple_form_for([@post, @comment], remote: true) do |form| %>
    <%= form.input :content,
                required: true,
                autofocus: true,
                label: false %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :post_id, value: @post.id %>
    <%= form.button :submit, class: "button_normal", id:"comment_send", value:"send" %>
    <% end %>
    </div>
</div>



