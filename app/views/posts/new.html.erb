<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content,
                required: true,
                autofocus: true
                %>
    <%= f.association :zone,
                collection: current_user.zones,
                as: :select,
                required: true,
                input_html: { id: "zone_choice"}
                %>
    </div>
    <div id='interest_tags_with_zone'>
    <%= f.association :interest_tag,
                as: :radio_buttons,
                required: true
                %>
    </div>
<!-- Should only display interest tag belong to the zone -->
<script src='new'></script>

  <div class="form-actions">
    <%= f.button :submit, "publish" %>
  </div>
<% end %>
