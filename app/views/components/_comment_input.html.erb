<div class="comment-bar">

  <!--  AVATAR -->
  <div class="avatar-comment">
    <%= link_to user_path(current_user) do %>
      <% if current_user.avatar_url.blank? == true %>
        <%= image_tag("default-avatar.png", class:"avatar_navbar avatar_navbar_show") %>
      <% else %>
        <%=  cl_image_tag(current_user.avatar_url, class:"avatar_navbar avatar_navbar_show") %>
      <% end %>
    <% end  %>
  </div>

  <!-- COMMENT -->

  <div class="comment-input">
      <%= form_tag href="#", method: :get do %>
      <%= text_field_tag :query,
        params[:query],
          id: "comment-input",
          placeholder: "Your comment..."
      %>
      <% end %>
  </div>

